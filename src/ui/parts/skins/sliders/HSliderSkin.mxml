<?xml version="1.0" encoding="utf-8"?>

<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
             xmlns:s="library://ns.adobe.com/flex/spark"
             minWidth="10">

    <fx:Metadata>
		<![CDATA[
        [HostComponent("spark.components.HSlider")]
        ]]>
	</fx:Metadata>

    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"/>
        <s:State name="inactive"/>
    </s:states>

    <s:VGroup width="100%"
              height="40"
              verticalAlign="middle">
        <s:Button id="track"
                  height="5"
                  width="100%"
                  styleName="slider"
                  skinClass="ui.parts.skins.sliders.HSliderTrackSkin"/>
    </s:VGroup>

    <s:Button id="thumb"
              top="13"
              styleName="slider"
              skinClass="ui.parts.skins.sliders.HSliderThumbSkin"/>

</s:SparkSkin>