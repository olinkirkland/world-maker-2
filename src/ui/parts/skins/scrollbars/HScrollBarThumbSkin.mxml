<?xml version="1.0" encoding="utf-8"?>

<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
             xmlns:s="library://ns.adobe.com/flex/spark"
             minHeight="10">

    <fx:Metadata>
		<![CDATA[
        [HostComponent("spark.components.Button")]
        ]]>
	</fx:Metadata>

    <s:states>
        <s:State name="up"/>
        <s:State name="over"/>
        <s:State name="down"/>
        <s:State name="disabled"/>
    </s:states>

    <s:Rect width="100%"
            left="0"
            right="0"
            top="0"
            bottom="0"
            radiusX="4"
            radiusY="4">
        <s:fill>
            <s:SolidColor color="{Color.textLow}"
                          color.over="{Color.textMedium}"/>
        </s:fill>

    </s:Rect>

    <fx:Script><![CDATA[
        import global.Color;
        ]]></fx:Script>
</s:SparkSkin>